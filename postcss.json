{
  "use": [
    "postcss-flexbugs-fixes",
    "postcss-custom-properties",
    "postcss-nesting",
    "postcss-custom-media",
    "postcss-pseudo-class-any-link",
    "postcss-apply",
    "autoprefixer",
    "postcss-reporter"
  ],
  "input": "src/css/*.css",
  "dir": "css",
  "autoprefixer": {
    "browsers": ["last 2 versions", "ie >= 11", "ios >= 6", "android >= 4.0"]
  },
  "postcss-reporter": {
    "clearReportedMessages": true
  }
}